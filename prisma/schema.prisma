// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(uuid())
  userId    String   @unique
  name      String
  firstName String?
  lastName  String?
  email     String   @db.Text
  imageUrl  String   @db.Text
  bio       String?  @db.Text
  rank      UserRank @default(COAL)
  role      UserRole @default(USER)
  plan      UserPlan @default(NONE)

  threads       Thread[]
  threadReplies ThreadReply[]

  threadVotes      ThreadVote[]
  threadReplyVotes ThreadReplyVote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRank {
  COAL
  IRON
  GOLD
  REDSTONE
  LAPIS
  DIAMOND
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
  OWNER
}

enum UserPlan {
  NONE
  PREMIUM
}

model Thread {
  id      String  @id @default(uuid())
  title   String  @db.Text
  content String? @db.Text

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  tags    Tag[]
  replies ThreadReply[]
  votes   ThreadVote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
}

model Tag {
  id   String @id @default(uuid())
  name String @unique

  threads Thread[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ThreadVote {
  id   String         @id @default(uuid())
  type ThreadVoteType

  threadId String
  thread   Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([threadId])
  @@index([authorId])
}

enum ThreadVoteType {
  UPVOTE
  DOWNVOTE
}

model ThreadReply {
  id      String @id @default(uuid())
  content String

  votes ThreadReplyVote[]

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  threadId String
  thread   Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId])
  @@index([authorId])
}

model ThreadReplyVote {
  id   String         @id @default(uuid())
  type ThreadVoteType

  threadReplyId String
  threadReply   ThreadReply @relation(fields: [threadReplyId], references: [id], onDelete: Cascade)

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([threadReplyId])
  @@index([authorId])
}
